    <div class="panel panel-default">
      <div class="panel-body">
        <h5 style="color: grey; font-size: 125%;">who to follow</h5>
        <% for @u in @toFollow do %>
          <p style="font-weight: bold; oapcity: 0.85;"><a href="/user/<%= @u.username %>"><%= @u.username %></a></p>
        <% end %>
      </div>
    </div>
  </div>
</div>
